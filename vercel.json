{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/backend/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/worker/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/recruiter/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/server/index.js"
    }
  ]
}
