{
  "version": 2,
  "builds": [
    {"src": "server/index.js", "use": "@vercel/node"},
    {"src": "**/*.css", "use": "@vercel/static"},
    {"src": "**/*.js", "use": "@vercel/static"},
    {"src": "**/*.html", "use": "@vercel/static"},
    {"src": "assets/**", "use": "@vercel/static"},
    {"src": "i18n/**", "use": "@vercel/static"},
    {"src": "partials/**", "use": "@vercel/static"},
    {"src": "worker/**", "use": "@vercel/static"},
    {"src": "recruiter/**", "use": "@vercel/static"}
  ],
  "routes": [
    {"src": "/backend/(.*)", "dest": "/server/index.js"},
    {"src": "/api/(.*)", "dest": "/server/index.js"},
    {"src": "/worker/(.*)", "dest": "/server/index.js"},
    {"src": "/recruiter/(.*)", "dest": "/server/index.js"},
    {"src": "/(.*)", "dest": "/server/index.js"}
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {"NODE_ENV": "production"},
  "functions": {
    "server/index.js": {
      "maxDuration": 10
    }
  }
}